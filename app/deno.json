{
  "imports": {
    "app/": "../app/",
    "lib/": "../lib/",
    "ctx/": "../ctx/",
    "driver/": "../driver/"
  },
  "compilerOptions": {
    "lib": [
      "dom"
    ],
    "jsx": "react-native"
  },
  "fmt": {
    "options": {
      "lineWidth": 120,
      "useTabs": false,
      "indentWidth": 2,
      "semiColons": false,
      "singleQuote": true,
      "proseWrap": "always"
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "no-explicit-any"
      ]
    }
  }
}
