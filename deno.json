{
  "tasks": {
    "trpc:watch": "deno run -A --unstable-net --watch driver/trpc/server.ts",
    "trpc:serve": "deno run -A --unstable-net driver/trpc/server.ts",
    "trpc:cli": "deno run -A --unstable-net driver/trpc/cli.ts",
    "trpc:remote-cli": "deno run -A --unstable-net driver/trpc/remote-cli/main.ts",
    "orpc:watch": "deno run -A --unstable-net --watch driver/orpc/server.ts",
