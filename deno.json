    "ts-to-zod": "npm:ts-to-zod@^3.15.0",
    "ws": "npm:ws@^8.0.0",
    "zod": "npm:zod@^3.24.2",
    "core/": "./core/",
    "util/": "./util/"
  },
  "compilerOptions": {
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "unstable": [
    "sloppy-imports"
  ],
  "fmt": {
    "options": {
      "lineWidth": 120,
      "useTabs": false,
      "indentWidth": 2
    }
  }
}
